      </ImageView>
      <ListView fx:id="playersListView" layoutX="-1.0" layoutY="1.0" onMouseClicked="#selectItem" prefHeight="651.0" prefWidth="284.0" stylesheets="@list.css" />
      <Label fx:id="playerName" layoutX="189.0" layoutY="72.0" prefHeight="49.0" prefWidth="348.0" textFill="WHITE">
         <font>
            <Font name="Britannic Bold" size="30.0" />
         </font>
      </Label>
      <Label fx:id="score" layoutX="292.0" layoutY="156.0" prefHeight="73.0" prefWidth="348.0" textFill="WHITE">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Button fx:id="playBtn" layoutX="141.0" layoutY="146.0" mnemonicParsing="false" onAction="#gameButton" prefHeight="93.0" prefWidth="378.0" style="-fx-background-color: transparent;" text="Play" textFill="#ff892e">
